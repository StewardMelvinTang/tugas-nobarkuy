<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetail"
    android:orientation="vertical"
    android:id="@+id/coordinator_layout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/solidcolororange"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#ff5500"></ImageView>



        <ImageView
            android:id="@+id/solidcolororange2"
            android:layout_width="match_parent"
            android:layout_below="@id/solidcolororange"
            android:layout_height="170dp"
            android:background="#ff5500"></ImageView>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/solidcolororange2"
            android:layout_marginTop="-10dp"
            android:rotation="180"
            android:src="@drawable/ic_wave"></ImageView>

        <LinearLayout
            android:id="@+id/toolbaratas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/imgbtn_back"
                android:layout_marginStart="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/vector_back"></ImageButton>

            <TextView
                android:id="@+id/txt_movietitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/retrorica"
                android:text="All Movies"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:maxWidth="250dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/img_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:tooltipText="Add to Favorite"
                android:layout_marginEnd="10dp"
                android:src="@drawable/vector_favoriteborder"
                android:tint="@color/white">
            </ImageView>

            <ImageButton
                android:id="@+id/imgbtn_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:tooltipText="Share this movie"
                android:background="@drawable/vector_share"
                android:layout_marginEnd="10dp">
            </ImageButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/toolbaratas"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"

                android:backgroundTint="@color/orange_200"
                app:cardCornerRadius="15dp">
            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="match_parent"
                android:scaleX="1.1"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:src="@drawable/logo">
            </ImageView>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/retrorica"
                    android:text="Movie Title"
                    android:textColor="@color/white"
                    android:textSize="26dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/txt_releasedate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/retrorica"
                    android:text="Release Date"
                    android:textColor="@color/orange_700"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/txt_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/retrorica"
                    android:text="Rating : 0.0 / 10"
                    android:textColor="@color/orange_700"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/txt_fav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/retrorica"
                    android:text="Favorite : true"
                    android:textColor="@color/orange_700"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:visibility="gone"></TextView>



            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#f0f0f0"
            android:elevation="8dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/retrorica"
                    android:textColor="@color/orange_500"
                    android:text="Details"
                    android:textSize="30dp"
                    android:textStyle="normal">
                </TextView>

                <TextView
                    android:id="@+id/txt_movietitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/retrorica"
                    android:singleLine="true"
                    android:text="Movie Title : "
                    android:textSize="16dp"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/txt_releasedate2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/retrorica"
                    android:singleLine="true"
                    android:text="Release Date : "
                    android:textSize="16dp"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/txt_rating2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/retrorica"
                    android:singleLine="true"
                    android:text="Rating : "
                    android:textSize="16dp"
                    android:textStyle="normal"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#f0f0f0"
            android:elevation="8dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/retrorica"
            android:textColor="@color/orange_500"
            android:text="Synopsis"
            android:textSize="30dp"
            android:textStyle="normal">
        </TextView>
    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/retrorica"
        android:text="Description"
        android:layout_marginTop="5dp"
        android:textSize="22dp"
        android:textStyle="normal">
    </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </LinearLayout>

</ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>